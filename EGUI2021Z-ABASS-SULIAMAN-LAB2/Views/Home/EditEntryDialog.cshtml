@{
}

@model EGUI2021Z_ABASS_SULIAMAN_LAB2.Models.EditEntryModel


@{
    ViewData["Title"] = "EditEntry";
}

<script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>

<form method = "POST" asp-action="EditEntry">
    <div class="border p-4 border-primary">

        <div class:"form-group row">
            <h2 class="text-black-70 pl-3">Edit Entry</h2>
        </div>


            <div class="input-group mb-2">
                <div class="input-group-prepend">
                <span class="input-group-text">Code :   </span>
            </div> 
                <div class="btn-group">
                    <a class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" href="#">Codes <span class="caret"></span></a>
                         <div class="dropdown-menu">
                              @foreach(var d in Model.codeList)
                                {
                                    <li><a class = "dropdown-item">@d</a></li>
                                }            
                         </div>
                </div>
                        <input type="hidden" id="code" name ="code" value=@Model.code>
            </div>

            
        <div class = "col-md-6">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Time :   </span>
                </div>
                <input asp-for="time" type="text" class="form-control" placeholder="(Model.time)">
            </div>
        </div>

        <div class = "col-md-6" >
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Description :   </span>
                </div>
                <input asp-for="description" type="text" class="form-control" placeholder="(Model.description)">
            </div>
        </div>

            <div>
                <input asp-for="count" type="hidden" class="form-control" placeholder="(Model.count)"> 
                <input asp-for="date" type="hidden" class="form-control" placeholder="(Model.date)"> 
            </div>

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-primary w-75" value="Submit" />
                </div>
                <div class="col">
                    <a asp-action="Welcome" class="btn btn-warning  w-75">Back</a>
                </div>
            </div>
        </div>
</form>

<script>

    $(".dropdown-menu li a").click(function(){
  var selText = $(this).text();
  $(this).parents('.btn-group').find('.dropdown-toggle').html(selText+' <span class="caret"></span>');
  $('#code').val(selText);
});

</script>