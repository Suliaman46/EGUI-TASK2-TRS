<table class="table table-bordered table-responsive table-hover">  
    <tr>  
        <th>Date </th>  
        <th>Code</th>  
        <th>Time</th>  
        <th>Description</th>  
    </tr> 
    @{int i = 0;}
    @foreach (var d in Model)  
    {  
        <tr>  
            <td>@d.date</td>  
            <td>@d.code</td>  
            <td>@d.time</td>  
            <td>@d.description</td>  
            <td>
                <a asp-action="TestEdit" asp-route-id=@i asp-controller="Home" method = "GET" class="btn btn-warning w-75">Edit</a>  
            </td>
        </tr>  
        i++;
    }  
</table>
